{% extends "WebsiteBundle::layout.html.twig" %}

{% block title %}{{ parent() }} - Index{% endblock %}

{% block body %}
  <h1>Media</h1>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h4 class="panel-title">Ajouter un media (mp3 uniquement!)</h4>
    </div>
    <div class="panel-body">
      {{ render(controller('WebsiteBundle:Media:add', { 'request': app.request })) }}
    </div>
  </div>

  {% for media in medias %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          {{ media.title }}
        </h3>
      </div>
      <div class="panel-body">
        <audio controls>
          <source src="{{ asset('audio/' ~ media.path) }}" type="audio/mpeg" >
        </audio>
      </div>
    </div>
  {% else %}
    <p class="panel panel-default">
      Il n'y a pas encore de medias Ã  afficher
    </p>
  {% endfor %}

